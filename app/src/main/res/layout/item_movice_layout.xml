<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"

    >

    <TextView
        android:id="@+id/item_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_15_sp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        />


<RelativeLayout
android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/colorAccent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/item_movice_img"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_movice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/item_movice_img"
        android:textSize="@dimen/text_size_24_sp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_movice_img"
        />

    <TextView
        android:id="@+id/item_movice_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_movice_tv"
        android:layout_below="@+id/item_movice_tv"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17_sp"
        />

</RelativeLayout>

</LinearLayout>